{
  "name": "auth",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "knex": "knex",
    "generate": "graphql-codegen --config codegen.yml",
    "build:deps": "pnpm --filter token-introspection build",
    "build": "pnpm build:deps && pnpm clean && tsc --build tsconfig.json && pnpm copy-files",
    "clean": "rm -fr dist/",
    "test": "jest --passWithNoTests --maxWorkers=50%",
    "test:cov": "pnpm test -- --coverage",
    "test:sincemain": "pnpm test -- --changedSince=main",
    "test:sincemain:cov": "pnpm test:sincemain --coverage",
    "prepack": "pnpm build",
    "copy-files": "cp src/graphql/schema.graphql dist/graphql/ && cp -r ./src/openapi ./dist/"
  },
  "dependencies": {
    "@adonisjs/fold": "^8.2.0",
    "@apollo/server": "^4.9.2",
    "@as-integrations/koa": "^1.1.1",
    "@graphql-tools/graphql-file-loader": "^8.0.0",
    "@graphql-tools/load": "^8.0.1",
    "@graphql-tools/schema": "^10.0.2",
    "@interledger/http-signature-utils": "2.0.0",
    "@interledger/open-payments": "6.0.0",
    "@interledger/openapi": "1.2.1",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.0",
    "ajv": "^8.12.0",
    "axios": "^1.6.5",
    "dotenv": "^16.3.1",
    "graphql": "^16.8.1",
    "knex": "^3.1.0",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-session": "^6.4.0",
    "objection": "^3.1.3",
    "objection-db-errors": "^1.1.2",
    "pg": "^8.11.3",
    "pino": "^8.17.2",
    "token-introspection": "workspace:*",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@apollo/client": "^3.8.8",
    "@faker-js/faker": "^8.3.1",
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/introspection": "4.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@types/koa": "2.13.12",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-session": "^6.4.5",
    "@types/koa__cors": "^4.0.3",
    "@types/koa__router": "^12.0.4",
    "@types/uuid": "^9.0.7",
    "cross-fetch": "^4.0.0",
    "jest-openapi": "^0.14.2",
    "nock": "^13.4.0",
    "node-mocks-http": "^1.14.1",
    "openapi-types": "^12.1.3",
    "pino-pretty": "^10.3.1",
    "testcontainers": "^10.3.2",
    "typescript": "^4.9.5"
  }
}
